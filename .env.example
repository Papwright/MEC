# Malawi Elections Management System Configuration
# Copy this file to config.env and update with your values

# ==============================================
# SERVER CONFIGURATION
# ==============================================
NODE_ENV=production
PORT=3000
CLIENT_URL=https://your-domain.com

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DB_HOST=your-database-host
DB_USER=your-database-user
DB_PASSWORD=your-database-password
DB_NAME=tripartate_elections_mw
DB_PORT=3306
DB_CONNECTION_LIMIT=20

# ==============================================
# SESSION & SECURITY
# ==============================================
SESSION_SECRET=change-this-to-a-random-secure-string
JWT_SECRET=change-this-to-another-random-secure-string
BCRYPT_ROUNDS=12

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX_REQUESTS=5
